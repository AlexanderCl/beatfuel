<%= form_for @user, :html => {:multipart => true} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> User cannot be saved because:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <h1>Over jezelf</h1>
      <%= f.label :name %><br>
      <%= f.text_field :name %>

      <%= f.fields_for :user_information do |u| %>
          <div class="field">
            <%= u.label :slogan %><br />
            <%= u.text_field :slogan %><br />


            <%= u.label :about %><br />
            <%= u.text_area :about, rows: 15 %><br />

            <%= u.label :music_genre %><br />
            <%= u.text_field :music_genre %>
          </div>
      <% end %>
      </div>

  <div class="actions">
   <%= f.submit %>
  </div>
<%end%>



<!-- Register -->
<div id="register" class="register">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="col-md-12 text-center">
          <h1>Meteen registreren? Het kan!</h1>
          <hr>
        </div>

        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <form role="form" method="post" action="#">
              <input type="hidden" name="recipient" value="#">
              <input type="hidden" name="subject" value="#">
              <input type="hidden" name="redirect" value="#">

              <div class="form-group">
                <label for="email"><i class="fa fa-star"></i> Email:</label>
                <input class="form-control" type="email" name="email" placeholder="info@example.com" required />
                <span class="form_hint">Gelieve een geldig emailadress in te vullen</span>
              </div>

              <div class="form-group">
                <label for="name"><i class="fa fa-user"></i> Naam:</label>
                <input class="form-control" type="text" name="name" placeholder="John Doe" required />
              </div>

              <div class="clearfix"></div>
              <div class="form-group">
                <input class="btn btn-default btn-lg btn-register" TYPE="Submit" formaction="Register_Complete1.html" VALUE="Registreer">
                <input class="btn btn-default btn-lg btn-register" TYPE="Submit" formaction="#" VALUE="Registreer via Facebook">
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

